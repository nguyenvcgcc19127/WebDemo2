@model WebDemo2.Models.Topic

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Create Topic</h4>
    </div>
    <div class="card-content">
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6 col-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Topic_ID, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.Topic_ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Topic_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Topic_Name, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.Topic_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Topic_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Course_ID, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.Course_ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Course_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-1 mb-1">
                            Submit
                        </button>
                        <button onclick="location.href='@Url.Action("Index", "Category")';return false;" class="btn btn-light-secondary me-1 mb-1">Back to List</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

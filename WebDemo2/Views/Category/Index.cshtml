@model IEnumerable<WebDemo2.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped" id="table1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Category_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Category_ID }, new { onclick = "return confirm('Are you sure you wish to delete this cat?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

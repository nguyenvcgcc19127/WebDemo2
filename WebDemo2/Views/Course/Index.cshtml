@model IEnumerable<WebDemo2.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold text-primary">Course</h1>
    </div>
    <div class="card-header py-3">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Course_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course_Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Course_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course_Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course_Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Course_ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Course_ID }, new { onclick = "return confirm('Are you sure to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
